import pygame
from pygame import display
from sys import exit

pygame.init()
pygame.mixer.init()

# start_screen_surface =  pygame.image.load('graphics/startscreen.png').convert()
# start_screen_surface = pygame.transform.scale(start_screen_surface, (800, 300))

pygame.mixer.music.load("audio/retro-game-arcade-236133.mp3")
pygame.mixer.music.play(-1)

score = 0

jump_sound = pygame.mixer.Sound("audio/cartoon-jump-6462.mp3")

die_sound = pygame.mixer.Sound("audio/lose-sfx-365579.mp3")

screen = display.set_mode((800,400))
pygame.display.set_caption('jumper')
clock = pygame.time.Clock()
test_font = pygame.font.Font('font/BoldPixels1.4.ttf', 50)
game_active = True

sky_surface =  pygame.image.load('graphics/sky.jpg').convert()
sky_surface = pygame.transform.scale(sky_surface, (800, 300))

grass_surface = pygame.image.load('graphics/grass.jpg').convert()
grass_surface = pygame.transform.scale(grass_surface, (800, 100))

# score_surface = test_font.render("score : 0", False, (64,64,64))
# score_rect = score_surface.get_rect(center = (400,50))

score_surface = test_font.render(f"Score: {int(score)}", True, "black")
score_rect = score_surface.get_rect(center=(400,50))
screen.blit(score_surface, score_rect)


spider_surface = pygame.image.load('graphics/spider.png').convert_alpha()
spider_surface = pygame.transform.scale(spider_surface, (100, 100))
spider_rect = spider_surface.get_rect(topleft = (800, 235)) # 235
#spider_x_pos = 800

death_screen_surface = pygame.image.load('graphics/mainscren.jpg').convert()
death_screen_surface = pygame.transform.scale(death_screen_surface, (800, 400))

player_surface = pygame.image.load('graphics/player.png').convert_alpha()
player_surface = pygame.transform.scale(player_surface, (70, 150))
player_rect = player_surface.get_rect(topleft = (80, 182))
player_gravity = 0

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            exit()
        if game_active:
            if event.type == pygame.MOUSEBUTTONDOWN and player_rect.bottom >= 340:
                player_gravity = -20
                jump_sound.play()

            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_SPACE and player_rect.bottom >= 340:
                    player_gravity = -20
                    jump_sound.play()


        else:
            if event.type == pygame.KEYDOWN and event.key == pygame.K_SPACE:
                game_active = True
                spider_rect.left = 800
                score = 0
                pygame.mixer.music.play(-1)

    if game_active:
        score += 1

        score_surface = test_font.render(f"Score: {int(score)}", True, (64, 64, 64))
        score_rect = score_surface.get_rect(center=(400, 50))

        screen.blit(sky_surface, (0, 0))
        screen.blit(grass_surface, (0, 300))
        pygame.draw.rect(screen, '#c0e8ec', score_rect, 0, 10)
        pygame.draw.rect(screen, '#c0e8ec', score_rect, 10, 10)
        screen.blit(score_surface, score_rect)

        spider_rect.x -= 5
        if spider_rect.right <= 0: spider_rect.left = 800

        screen.blit(spider_surface, spider_rect)

        # player
        player_gravity += 1
        player_rect.y += player_gravity
        if player_rect.bottom >= 340: player_rect.bottom = 340
        screen.blit(player_surface, player_rect)

        # if spider_rect.colliderect(player_rect):
           # game_active = False
        spider_hitbox = spider_rect.inflate(-70, -50)  # maakt de rect smaller
        if spider_hitbox.colliderect(player_rect):
            game_active = False
            die_sound.play()
            pygame.mixer.music.stop()

    else:
        screen.blit(death_screen_surface, (0, 0))
        screen.blit(death_screen_surface, (0, 0))
        death_score_surface = test_font.render(f"Your Score: {int(score)}", True, "black")
        death_score_rect = death_score_surface.get_rect(center=(400, 300))
        screen.blit(death_score_surface, death_score_rect)

    pygame.display.update()
    clock.tick(60)
